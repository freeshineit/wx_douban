.db_book-top {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background: #fff;
  box-shadow: 0 1rpx 8rpx #eee;
  height: 80rpx;
  display: flex;
  align-items: center;
}
.db_book-top .content {
  padding-left: 40rpx;
  padding-right: 40rpx;
  width: 100%;
}
.db_book-top .content .form .search-input {
  border: 1rpx solid #aaa;
  border-radius: 8rpx;
  padding: 5rpx 10rpx;
  font-size: 24rpx;
}
.db_book-container {
  padding-top: 88rpx;
}
.db_book-list {
  display: flex;
  flex-wrap: wrap;
}
.db_book-list .item {
  width: 44%;
  margin: 0rpx 3% 30rpx;
}
.db_book-list .item .cover {
  height: 474rpx;
}
.db_book-list .item .cover image {
  width: 100%;
  height: 474rpx;
}
.db_book-list .item .desc {
  font-size: 24rpx;
  color: #000;
  padding: 10rpx 0;
  display: flex;
}
.db_book-list .item .desc .title {
  height: 34rpx;
  overflow: hidden;
}
.db_book-list .item .desc .rating {
  color: #e09015;
  margin-left: 10rpx;
}
