.db_movie-top {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.db_movie-list {
  display: flex;
  flex-wrap: wrap;
}
.db_movie-list .item {
  width: 44%;
  margin: 0rpx 3% 30rpx;
}
.db_movie-list .item .cover {
  height: 474rpx;
}
.db_movie-list .item .cover image {
  width: 100%;
  height: 474rpx;
}
.db_movie-list .item .desc {
  font-size: 24rpx;
  color: #000;
  padding: 10rpx 0;
  display: flex;
}
.db_movie-list .item .desc .rating {
  color: #e09015;
  margin-left: 10rpx;
}
